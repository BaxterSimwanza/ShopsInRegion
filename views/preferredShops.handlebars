<div class="cardsContainer">
    {{#each likedShopsData}}
    <div class="card" style="width: 22rem;">
        <form action="/removeFromPreferredShops" method="POST">
            <input type="hidden" name="shopId" value={{ shopId }}>
            <h5 class="card-title" style="text-align: center; vertical-align:middle;">{{shopName}}</h5>
            <img src={{ imageLink }} class="card-img-top" alt="shop image">
            <div class="card-body" style="text-align: center;">
                <button type="submit" class="btn btn-danger">Remove</button>
            </div>
        </form>
    </div>
    {{/each}}
</div>